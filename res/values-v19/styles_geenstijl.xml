<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Geenstijl" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_geenstijl</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Geenstijl</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Geenstijl</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Geenstijl</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Geenstijl</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Geenstijl</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_geenstijl</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_geenstijl</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Geenstijl</item>

        <!-- #bebebe -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
